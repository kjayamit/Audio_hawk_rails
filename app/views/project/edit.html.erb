<h1>Edit Book Detail</h1>
<% form_tag :action => 'update', :id => @project do %>
    <p><label for="project_title">Title</label>:
      <%= text_field 'project', 'project_name' %></p>
    <p><label for="project_price">Price</label>:
      <%= text_field 'project', 'price' %></p>
    <p><label for="project_subject">Subject</label>:
      <%= collection_select(:project, :category_id,
                            @categories, :id, :name) %></p>
    <p><label for="project_description">Description</label><br/>
      <%= text_area 'project', 'description' %></p>
    <%= submit_tag "Save changes" %>
<% end %>
<%= link_to 'Back', {:action => 'list' } %>