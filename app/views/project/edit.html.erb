<h1>Edit project Detail</h1>

<%= form_for  @project, :as => :project, :url => { :action => "update" }, :html => {:multipart => true} do |f| %>
    <p>
      <%= f.label :project_name %><br />
      <%= f.text_field :project_name %>
    </p>
    <p>
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :project_subject %><br />
      <%= f.collection_select :category_id,@categories,:id,:name %>
    </p>
    <p>
      <%= f.label :picture %><br />
      <%= f.file_field :picture %>
    </p>
    <p>
      <%= f.submit 'save changes' %>
    </p>
<% end %>

